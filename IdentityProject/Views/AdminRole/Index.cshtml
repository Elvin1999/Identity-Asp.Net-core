@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white m-1 p-1">
    <h2>Role list</h2>
</div>
<div class="text-danger" asp-validation-summary="All">

</div>
<table class="table table-bordered table-sm table-striped">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-danger" value="Delete">Delete</button>
                        <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-warning">Update</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="Create" class="btn btn-secondary">Create Role</a>



